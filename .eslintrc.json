{
  "root": true,
  "extends": ["airbnb"],
  "env": {
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"],
        "paths": ["./", "/client"]
      }
    }
  },
  "rules": {
    "no-nested-ternary": 0,
    "one-var": 0,
    "indent": ["error", 2],
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "max-len": [
      2,
      80,
      4,
      {
        "ignoreUrls": true,
        "ignoreComments": true
      }
    ],
    "comma-dangle": 0,
    "curly": ["error", "multi-line"],
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "no-shadow": [
      "warn",
      {
        "allow": ["req", "res", "err"]
      }
    ],
    "class-methods-use-this": 0,
    "valid-jsdoc": [
      "warn",
      {
        "requireReturn": true,
        "requireReturnType": true,
        "requireParamDescription": true,
        "requireReturnDescription": true,
        "matchDescription": ".+"
      }
    ],
    "require-jsdoc": [
      "warn",
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true,
          "ArrowFunctionExpression": true,
          "FunctionExpression": true
        }
      }
    ]
  }
}
